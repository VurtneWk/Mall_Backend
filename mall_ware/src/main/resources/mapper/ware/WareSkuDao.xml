<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.vurtnewk.mall.ware.dao.WareSkuDao">
    <!-- 可根据自己的需求，是否要使用 -->
    <sql id="Base_Column_List">
        id,
        sku_id,
        ware_id,
        stock,
        sku_name,
        stock_locked
    </sql>
    <resultMap type="com.vurtnewk.mall.ware.entity.WareSkuEntity" id="wareSkuMap">
        <result property="id" column="id"/>
        <result property="skuId" column="sku_id"/>
        <result property="wareId" column="ware_id"/>
        <result property="stock" column="stock"/>
        <result property="skuName" column="sku_name"/>
        <result property="stockLocked" column="stock_locked"/>
    </resultMap>

    <!--auto generated by MybatisCodeHelper on 2025-01-13-->
    <update id="updateStock">
        update wms_ware_sku
        SET stock = stock + #{skuNum}
        WHERE sku_id = #{skuId}
          AND ware_id = #{wareId}
    </update>

    <select id="getSkuStock" resultType="long">
        SELECT SUM(stock - stock_locked)
        FROM wms_ware_sku
        WHERE sku_id = #{skuId}
    </select>
</mapper>